<Window x:Class="TXT_redactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TXT_redactor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600" Background="#FFC84343">
    <Grid Background="#FFC7EE7A" Margin="0,0,0,-16">
        <Button x:Name="Save" Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="90" FontFamily="Comic Sans MS" FontSize="14" Click="Save_Click" Cursor="Hand" Background="#FFE249EA" Margin="10,410,0,0"/>
        <Button x:Name="Load" Content="Загрузить" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="90" FontSize="14" FontFamily="Comic Sans MS" Click="Load_Click" Cursor="Hand" Background="#FF3974C3" Margin="10,10,0,0"/>
        <RichTextBox x:Name="Text" Margin="10,52,10,52" FontSize="14" FontFamily="Times New Roman" TextChanged="Text_TextChanged">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
